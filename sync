#!/bin/bash
sudo apt install wget
MANIFEST=https://github.com/Project-Fluid/manifest.git
BRANCH=fluid-11

mkdir -p /tmp/rom
cd /tmp/rom

# Repo init command, that -device,-mips,-darwin,-notdefault part will save you more time and storage to sync, add more according to your rom and choice.Optimization is welcomed! Let's make it quit, and with depth=1 so that no unnecessary things.
repo init --no-repo-verify --depth=1 -u "$MANIFEST" -b "$BRANCH" -g default,-device,-mips,-darwin,-notdefault
#git clone https://github.com/Kota-Gaplek-Project/android_.repo_local_manifest.git --depth=1 .repo/local_manifest -b fluid
git config --global user.name "D4rkKnight21"
git config --global user.email "yusuff8621@gmail.com"

# Sync source with -q, no need unnecessary messages, you can remove -q if want! try with -j30 first, if fails, it will try again with -j8
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j$(nproc --all) || repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j8

# clone local manifest
git clone https://github.com/D4rkKnight21/device_xiaomi_platina.git -b fluid --depth=1 device/xiaomi/platina
git clone https://github.com/D4rkKnight21/device_xiaomi_sdm660-common.git -b 11 --depth=1 device/xiaomi/sdm660-common
git clone https://github.com/D4rkKnight21/UghTea.git -b eas --depth=1 kernel/xiaomi/sdm660
git clone https://github.com/Kota-Gaplek-Project/vendor_platina.git -b 11 --depth=1 vendor/xiaomi
git clone https://github.com/kdrag0n/proton-clang.git -b master --depth=1 prebuilts/clang/host/linux-x86/clang-proton
